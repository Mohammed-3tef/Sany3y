@using Sany3y.Infrastructure.Models
@model IEnumerable<Sany3y.Infrastructure.Models.User>

@{
    ViewData["Title"] = "احجز مع أفضل الصنايعية";
    var categories = ViewBag.AllCategories as List<Category>;
}

<style>
    :root {
        --primary-green: #004d00;
        --secondary-green: #006400;
        --accent-yellow: #ffb300;
        --light-bg: #f0f2f5;
        --text-dark: #2c3e50;
        --border-color: #e0e0e0;
    }

    body {
        background-color: var(--light-bg);
    }

    /* Search Bar Section */
    .search-section {
        background: var(--primary-green);
        padding: 20px 0;
        color: white;
        margin-bottom: 30px;
    }

    .search-container {
        background: white;
        border-radius: 8px;
        padding: 10px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .search-item {
        flex: 1;
        min-width: 200px;
        border-left: 1px solid #eee; /* RTL: border-left acts as separator */
        padding: 0 15px;
        position: relative;
    }

        .search-item:last-child {
            border-left: none;
        }

    .search-label {
        display: block;
        font-size: 0.8rem;
        color: #888;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .search-select {
        width: 100%;
        border: none;
        font-weight: bold;
        color: var(--text-dark);
        outline: none;
        background: transparent;
        cursor: pointer;
    }

    .search-btn {
        background: var(--accent-yellow);
        color: white;
        border: none;
        padding: 0 40px;
        font-weight: bold;
        border-radius: 4px;
        font-size: 1.1rem;
        transition: all 0.3s;
    }

        .search-btn:hover {
            background: #e6a200;
        }

    /* Sidebar Filters */
    .filter-card {
        background: white;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        overflow: hidden;
        margin-bottom: 20px;
    }

    .filter-header {
        background: #007bff; /* Vezeeta Blue for header, or stick to Green? Let's use Blue to match 'Like this' request slightly, or Green for brand. Sticking to Green for consistency but layout is key. */
        background: var(--primary-green);
        color: white;
        padding: 15px;
        font-weight: bold;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .filter-body {
        padding: 15px;
    }

    .filter-group {
        border-bottom: 1px solid #eee;
        padding-bottom: 15px;
        margin-bottom: 15px;
    }

        .filter-group:last-child {
            border-bottom: none;
            padding-bottom: 0;
            margin-bottom: 0;
        }

    .filter-title {
        font-weight: bold;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
    }

    .form-check-label {
        font-size: 0.9rem;
        color: #555;
        cursor: pointer;
    }

    /* Technician Card */
    .tech-card {
        background: white;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        margin-bottom: 20px;
        overflow: hidden;
        transition: box-shadow 0.3s;
        display: flex;
        flex-direction: column;
    }

        .tech-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    @@media (min-width: 768px) {
        .tech-card {
            flex-direction: row;
        }
    }

    /* Tech Info (Right Side) */
    .tech-info-section {
        padding: 20px;
        flex: 1.5;
        border-left: 1px solid #eee;
        text-decoration: none; /* Remove underline */
        color: inherit; /* Inherit text color */
        transition: background-color 0.2s ease;
        display: block; /* Ensure it behaves like a block for layout */
    }

        .tech-info-section:hover {
            background-color: #f9f9f9; /* Subtle hover effect */
            cursor: pointer;
        }

    .tech-header {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
    }

    .tech-img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #eee;
    }

    .tech-details h4 {
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 5px;
        color: var(--primary-green);
    }

    .tech-title {
        font-size: 0.85rem;
        color: #666;
        margin-bottom: 5px;
    }

    .tech-rating {
        color: var(--accent-yellow);
        font-size: 0.8rem;
    }

    .tech-meta {
        font-size: 0.85rem;
        color: #555;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

        .tech-meta i {
            color: var(--primary-green);
            width: 20px;
            text-align: center;
        }

    /* Action Section (Left Side) */
    .action-section {
        flex: 0 0 200px;
        background: #fcfcfc;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
        border-right: 1px solid #eee; /* RTL: border-right */
    }

    @@media (max-width: 768px) {
        .action-section

    {
        width: 100%;
        border-right: none;
        border-top: 1px solid #eee;
        flex: none;
    }

    .tech-card {
        flex-direction: column;
    }

    }

    /* RTL Adjustments */
    body[dir="rtl"] .action-section {
        border-left: none;
        border-right: 1px solid #eee;
    }

    @@media (min-width: 768px) {
        body [dir="rtl"] .tech-card

    {
        flex-direction: row;
    }

    }
</style>

<!-- Top Search Section -->
<div class="search-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-3 text-center d-none d-md-block">احجز مع أفضل الصنايعية في مصر</h2>
                <form action="@Url.Action("Index", "Services")" method="get">
                    <div class="search-container">
                        <div class="search-item">
                            <label class="search-label"><i class="fas fa-tools"></i> التخصص</label>
                            <select name="categoryId" class="search-select">
                                <option value="">اختر التخصص</option>
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="search-item">
                            <label class="search-label"><i class="fas fa-map-marker-alt"></i> المحافظة</label>
                            <select name="governorate" id="governorateSelect" class="search-select">
                                <option value="">اختر المحافظة</option>
                                @if (ViewBag.Governorates != null)
                                {
                                    foreach (var gov in ViewBag.Governorates)
                                    {
                                        <option value="@gov.ArabicName" data-id="@gov.Id">@gov.ArabicName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="search-item">
                            <label class="search-label"><i class="fas fa-map-pin"></i> المنطقة</label>
                            <select name="city" id="citySelect" class="search-select">
                                <option value="">اختر المنطقة</option>
                            </select>
                        </div>
                        <div class="search-item">
                            <label class="search-label"><i class="fas fa-user"></i> اسم الصنايعي</label>
                            <input type="text" name="name" class="search-select" placeholder="ابحث بالاسم..." style="border-bottom: 1px solid #eee;">
                        </div>
                        <button type="submit" class="search-btn"><i class="fas fa-search"></i> ابحث</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




<div class="container">
    <div class="row">
        <!-- Main Content (Full Width) -->
        <div class="col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold">كل التخصصات <span class="text-muted fs-6">(@(Model?.Count() ?? 0) صنايعي)</span></h5>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        الترتيب: الأكثر تطابقاً
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">الأعلى تقييماً</a></li>
                        <li><a class="dropdown-item" href="#">الأقل سعراً</a></li>
                    </ul>
                </div>
            </div>
            @if (Model != null && Model.Any())
            {
                @foreach (var user in Model)
                {
                    <div class="tech-card animate_animated animate_fadeInUp">
                        <!-- Info Section (Clickable) -->
                        <a href="/Services/Details/@user.Id" class="tech-info-section text-decoration-none text-reset">
                            <div class="tech-header">
                                <img src="@(user.ProfilePicture?.Path ?? "https://placehold.co/100x100?text=User")"
                                     class="tech-img"
                                     alt="@user.FirstName"
                                     onerror="this.onerror=null;this.src='https://placehold.co/100x100?text=User';" />
                                <div class="tech-details">
                                    <h4>@user.FirstName @user.LastName</h4>
                                    <p class="tech-title">صنايعي عام ومحترف في الصيانة المنزلية</p>
                                    <div class="tech-rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <span class="text-dark ms-1 fw-bold">4.5</span>
                                        <span class="text-muted ms-1">(150 تقييم)</span>
                                    </div>
                                </div>
                            </div>

                            <div class="tech-meta">
                                <div>
                                    <i class="fas fa-stethoscope"></i> متخصص في:
                                    <span class="fw-bold text-dark">
                                        @{
                                            var category = categories?.FirstOrDefault(c => c.Id == user.CategoryID);
                                        }
                                        @(category?.Name ?? "غير محدد")
                                    </span>
                                </div>
                                <div><i class="fas fa-map-marker-alt"></i> العنوان: @(user.Address?.Governorate ?? "القاهرة")، @(user.Address?.City ?? "غير محدد")، @(user.Address?.Street ?? "غير محدد")</div>
                                <div><i class="fas fa-money-bill-alt"></i> سعر المعاينة: <span class="fw-bold text-success">@user.Price ج.م</span></div>
                                <div><i class="fas fa-phone-alt"></i> @user.PhoneNumber - سعر مكالمة عادية</div>
                            </div>
                        </a>
                        <!-- Action Section -->
                        <div class="action-section d-flex flex-column justify-content-center align-items-center p-3 bg-light border-start">
                            <div class="text-center mb-2 text-muted small">
                                <i class="fas fa-bolt text-warning"></i> حجز فوري
                            </div>
                            <a href="/Services/Details/@user.Id" class="btn btn-danger fw-bold w-100 px-4">
                                احجز الآن
                            </a>
                            <div class="mt-2 text-muted small" style="font-size: 0.75rem;">
                                متاح الدفع أونلاين
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    لا يوجد صنايعية متاحين حالياً في هذا التصنيف.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#governorateSelect').change(function() {
                var govId = $(this).find(':selected').data('id');
                var citySelect = $('#citySelect');

                citySelect.empty().append('<option value="">جاري التحميل...</option>');

                if (govId) {
                    $.get('/Services/GetCitiesByGovernorateId?id=' + govId, function(data) {
                        citySelect.empty().append('<option value="">اختر المنطقة</option>');
                        $.each(data, function(i, city) {
                            citySelect.append('<option value="' + city.arabicName + '">' + city.arabicName + '</option>');
                        });
                    }).fail(function() {
                        citySelect.empty().append('<option value="">خطأ في التحميل</option>');
                    });
                } else {
                    citySelect.empty().append('<option value="">اختر المنطقة</option>');
                }
            });
        });
    </script>
}
