@using Microsoft.AspNetCore.Identity
@using Sany3y.Infrastructure.Models

<footer class="footer-section">
    <div class="container">
        <div class="footer-content pt-5 pb-5">
            <div class="row">
                <!-- Brand Column -->
                <div class="col-md-6 mb-5">
                    <div class="footer-widget">
                        <div class="footer-logo">
                            <a asp-controller="Home" asp-action="Index" id="logo-text">
                                Sany3y<span class="text-gold">.com</span>
                            </a>
                        </div>
                        <div class="footer-text">
                            <p>منصتك الأولى للوصول لأمهر الفنيين والصنايعية في مصر. جودة، ثقة، وسرعة في التنفيذ.</p>
                        </div>
                        <div class="footer-social-icon">
                            <span>تابعنا</span>
                            <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                            <a href="#"><i class="fa-brands fa-instagram"></i></a>
                            <a href="#"><i class="fa-brands fa-twitter"></i></a>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <div class="footer-widget">
                        <div class="footer-widget-heading">
                            <h3>روابط سريعة</h3>
                        </div>
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                            <li><a asp-controller="Home" asp-action="AboutUs">من نحن</a></li>
                            <li><a asp-controller="Services" asp-action="Index">خدماتنا</a></li>
                            <li><a asp-controller="Home" asp-action="ContactUs">تواصل معنا</a></li>
                            <li><a asp-controller="Home" asp-action="OurTeam">فريق العمل</a></li>
                            <li><a asp-controller="Home" asp-action="Policy">سياسة الخصوصية</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Services -->
                <div class="col-md-3 mb-4">
                    <div class="footer-widget">
                        <div class="footer-widget-heading">
                            <h3>أهم الخدمات</h3>
                        </div>
                        <ul>
                            <li><a href="/Services/Search?serviceType=كهربا">كهرباء</a></li>
                            <li><a href="/Services/Search?serviceType=سباكه">سباكة</a></li>
                            <li><a href="/Services/Search?serviceType=نجاره">نجارة</a></li>
                            <li><a href="/Services/Search?serviceType=نقاشه">نقاشة</a></li>
                            <li><a href="/Services/Search?serviceType=تكييف وتبريد">تكييف</a></li>
                            <li><a href="/Services/Search?serviceType=صيانة اجهزة">صيانة أجهزة</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright-area">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-6 text-center text-lg-end">
                    <div class="copyright-text">
                        <p>حقوق النشر &copy; 2025 محفوظة لـ <a asp-controller="Home" asp-action="Index">Sany3y</a></p>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 d-none d-lg-block text-start">
                    <div class="footer-menu">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                            <li><a asp-controller="Home" asp-action="Policy">سياسة الخصوصية</a></li>
                            <li><a asp-controller="Home" asp-action="ContactUs">تواصل</a></li>
                            <li><a asp-controller="Home" asp-action="OurTeam">فريق العمل</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    /* Footer Base */
    .footer-section {
        background: #151414;
        position: relative;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .footer-content {
        position: relative;
        z-index: 2;
    }
    
    /* Logo & Text */
    #logo-text {
        font-size: 36px;
        font-weight: 800;
        color: #fff;
        text-decoration: none;
        display: block;
        margin-bottom: 20px;
    }
    
    .text-gold {
        color: #ffc107;
    }
    
    .footer-text p {
        margin-bottom: 14px;
        font-size: 14px;
        color: #7e7e7e;
        line-height: 28px;
    }
    
    /* Social Icons */
    .footer-social-icon span {
        color: #fff;
        display: block;
        font-size: 20px;
        font-weight: 700;
        font-family: 'Poppins', sans-serif;
        margin-bottom: 20px;
    }
    
    .footer-social-icon a {
        color: #fff;
        font-size: 16px;
        margin-left: 15px;
        height: 40px;
        width: 40px;
        line-height: 40px;
        text-align: center;
        border-radius: 50%;
        display: inline-block;
        transition: all 0.3s;
    }
    
    .footer-social-icon a:hover {
        transform: translateY(-5px);
    }

    /* Widgets */
    .footer-widget-heading h3 {
        color: #fff;
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 40px;
        position: relative;
    }
    
    .footer-widget-heading h3::before {
        content: "";
        position: absolute;
        right: 0;
        bottom: -15px;
        height: 2px;
        width: 50px;
        background: #ffc107;
    }
    
    .footer-widget ul li {
        display: inline-block;
        width: 50%; /* Two columns for links */
        float: right;
        margin-bottom: 12px;
    }
    
    .footer-widget ul li a {
        color: #878787;
        text-transform: capitalize;
        text-decoration: none;
        transition: all 0.3s;
    }
    
    .footer-widget ul li a:hover {
        color: #ffc107;
        padding-right: 5px;
    }
    
    /* Copyright */
    .copyright-area {
        background: #202020;
        padding: 25px 0;
    }
    
    .copyright-text p {
        margin: 0;
        font-size: 14px;
        color: #878787;
    }
    
    .copyright-text p a {
        color: #ffc107;
        text-decoration: none;
    }
    
    .footer-menu ul {
        margin: 0;
        padding: 0;
    }
    
    .footer-menu ul li {
        display: inline-block;
        margin-left: 20px;
    }
    
    .footer-menu ul li a {
        font-size: 14px;
        color: #878787;
        text-decoration: none;
        transition: all 0.3s;
    }
    
    .footer-menu ul li a:hover {
        color: #ffc107;
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .footer-widget ul li {
            width: 100%; /* Single column on mobile */
            float: none;
        }
        .footer-menu ul li {
            display: block;
            margin-bottom: 10px;
            text-align: center;
        }
        .copyright-text {
            text-align: center;
        }
    }
</style>
