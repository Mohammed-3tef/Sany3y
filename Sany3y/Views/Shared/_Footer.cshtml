@using Microsoft.AspNetCore.Identity
@using Sany3y.Infrastructure.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<footer class="footer bg-dark text-white pt-5 pb-4">
    <div class="container">
        <h1 class="fw-bold mb-3">Sany3y<span class="text-success">.com</span></h1>
        <div class="row gy-4">
            <!-- العمود الأول -->
            <div class="col-md-3 col-6">
                <ul class="list-unstyled">
                    <li><a asp-controller="Home" asp-action="Index" class="footer-link">الرئيسية</a></li>
                    <li><a asp-controller="Home" asp-action="AboutUs" class="footer-link">من نحن</a></li>
                    <li><a asp-controller="Home" asp-action="OurTeam" class="footer-link">فريق العمل</a></li>
                </ul>
            </div>

            <!-- العمود الثاني -->
            <div class="col-md-3 col-6">
                <h5 class="fw-bold mb-2">بحث حسب:</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="footer-link">التخصص</a></li>
                    <li><a href="#" class="footer-link">المنطقة</a></li>
                </ul>
            </div>

            @if (!SignInManager.IsSignedIn(User))
            {
                <!-- العمود الثالث -->
                <div class="col-md-3 col-6">
                    <h5 class="fw-bold mb-2">هل أنت فني؟</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Account" asp-action="Login" class="footer-link">انضم إلى فنيين صنايعي</a></li>
                    </ul>
                </div>
            }

            <!-- العمود الرابع -->
            <div class="col-md-3 col-6">
                <h5 class="fw-bold mb-2">هل تحتاج مساعدة؟</h5>
                <ul class="list-unstyled">
                    <li><a asp-controller="Home" data-show-loader="true" asp-action="ContactUs" class="footer-link">تواصل معنا</a></li>
                    <li><a asp-controller="Home" data-show-loader="true" asp-action="Policy" class="footer-link">سياسة الخصوصية</a></li>
                </ul>

                <!-- أيقونات السوشيال -->
                <div class="social-icons mt-2">
                    <a href="#" class="social-link"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#" class="social-link"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="social-link"><i class="fa-brands fa-twitter"></i></a>
                </div>
            </div>

        </div>

        <hr class="my-4 text-secondary" />

        <div class="text-center small text-secondary">
            &copy; 2025 <span class="text-success fw-bold">Sany3y</span>. جميع الحقوق محفوظة.
        </div>
    </div>
</footer>

<style>
    .footer-link {
        color: #bbb;
        text-decoration: none;
        transition: color 0.3s;
    }

    .footer-link:hover {
        color: #fff;
        text-decoration: underline;
    }

    .social-icons {
        display: flex;
        gap: 15px;
    }

    .social-link {
        color: #bbb;
        font-size: 1.2rem;
        transition: color 0.3s, transform 0.3s;
    }

    .social-link:hover {
        color: #0d6efd;
        transform: translateY(-3px);
    }

    .footer-logo {
        font-size: 1.5rem;
    }
</style>
