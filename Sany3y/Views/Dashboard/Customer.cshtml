@{
    ViewData["Title"] = "لوحة تحكم العميل";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-0" style="color: var(--primary-green);">
                <i class="fas fa-tachometer-alt me-2"></i>لوحة تحكم العميل
            </h2>
            <p class="text-secondary">مرحباً بك في لوحة التحكم الخاصة بك</p>
        </div>
    </div>

    <div id="loading" class="text-center py-5">
        <div class="spinner-border" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-secondary">جاري تحميل البيانات...</p>
    </div>

    <div id="dashboard-content" style="display:none;">
        <!-- Profile Section -->
        <div class="card shadow-sm mb-4 slide-in">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-user-circle me-2"></i>معلومات الحساب</span>
                <a href="@Url.Action("Profile", "Account")" class="btn btn-light btn-sm">
                    <i class="fas fa-edit me-1"></i>تعديل الحساب
                </a>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-2 text-center mb-3 mb-md-0">
                        <img id="profile-pic" src="https://placehold.co/120x120?text=Profile" alt="Profile Picture"
                            class="img-thumbnail rounded-circle shadow-sm" style="width: 120px; height: 120px; object-fit: cover;"
                            onerror="this.onerror=null;this.src='https://placehold.co/120x120?text=Profile';">
                    </div>
                    <div class="col-md-10">
                        <h4 id="user-name" class="fw-bold mb-3"></h4>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <i class="fas fa-envelope me-2" style="color: var(--primary-green);"></i>
                                    <span id="user-email" class="text-secondary"></span>
                                </p>
                                <p class="mb-2">
                                    <i class="fas fa-phone me-2" style="color: var(--success-green);"></i>
                                    <span id="user-phone" class="text-secondary"></span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                    <span id="user-location" class="text-secondary"></span>
                                </p>
                            </div>
                        </div>
                        <p id="user-bio" class="text-muted mt-3 mb-0 fst-italic"></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
    <!-- Upcoming Appointments -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm h-100 slide-in">
            <div class="card-header bg-info">
                <i class="fas fa-calendar-check me-2"></i>المواعيد القادمة
            </div>
            <div class="card-body">
                <ul id="upcoming-list" class="list-group list-group-flush">
                    <!-- Items will be appended here -->
                </ul>
                <div id="no-upcoming" class="empty-state" style="display:none;">
                    <i class="fas fa-calendar-times"></i>
                    <p class="mt-3 mb-0">لا توجد مواعيد قادمة</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Past Bookings -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm h-100 slide-in">
            <div class="card-header bg-secondary">
                <i class="fas fa-history me-2"></i>الحجوزات السابقة
            </div>
            <div class="card-body">
                <ul id="past-list" class="list-group list-group-flush">
                    <!-- Items will be appended here -->
                </ul>
                <div id="no-past" class="empty-state" style="display:none;">
                    <i class="fas fa-inbox"></i>
                    <p class="mt-3 mb-0">لا يوجد حجوزات سابقة</p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var userId = '@ViewBag.UserId';
            var apiUrl = '@ViewBag.ApiUrl';

            if (!userId) {
                toastr.error("User ID not found. Please log in.");
                return;
            }

            $.ajax({
                url: apiUrl + '/api/dashboard/customer/' + userId,
                method: 'GET',
                success: function (data) {
                    $('#loading').hide();
                    $('#dashboard-content').fadeIn();

                    // Populate Profile
                    $('#user-name').text(data.profile.firstName + ' ' + data.profile.lastName);
                    $('#user-email').text(data.profile.email);
                    $('#user-phone').text(data.profile.phone);
                    $('#user-location').text(data.profile.location);
                    $('#user-bio').text(data.profile.bio || 'لا توجد معلومات إضافية');
                    if (data.profile.profilePictureUrl) {
                        $('#profile-pic').attr('src', data.profile.profilePictureUrl);
                    }

                    // Populate Upcoming
                    if (data.upcomingAppointments && data.upcomingAppointments.length > 0) {
                        data.upcomingAppointments.forEach(function (task) {
                            var payButton = '';
                            // Show Pay button ONLY if Accepted AND PaymentMethod is Online (2)
                            if (task.status === 'Accepted' && task.paymentMethodId === 2) {
                                payButton = '<button class="btn btn-success btn-sm float-end pay-btn shadow-sm" ' +
                                    'data-taskid="' + task.id + '" ' +
                                    'data-price="' + task.price + '" ' +
                                    'data-servicename="' + task.serviceName + '">' +
                                    '<i class="fas fa-credit-card me-1"></i> دفع أونلاين' +
                                    '</button>';
                            }

                            var statusClass = '';
                            var statusIcon = '';
                            switch (task.status) {
                                case 'Pending':
                                    statusClass = 'bg-warning';
                                    statusIcon = 'fa-clock';
                                    break;
                                case 'Accepted':
                                    statusClass = 'bg-info';
                                    statusIcon = 'fa-check-circle';
                                    break;
                                case 'In Progress':
                                    statusClass = 'bg-primary';
                                    statusIcon = 'fa-spinner';
                                    break;
                                case 'Paid':
                                    statusClass = 'bg-success';
                                    statusIcon = 'fa-money-bill-wave';
                                    break;
                                default:
                                    statusClass = 'bg-secondary';
                                    statusIcon = 'fa-info-circle';
                            }

                            var item = '<li class="list-group-item border rounded mb-2 shadow-sm">' +
                                '<div class="d-flex justify-content-between align-items-start mb-2">' +
                                '<div class="flex-grow-1">' +
                                '<h6 class="mb-1 fw-bold">' + task.title + '</h6>' +
                                '<small class="text-muted"><i class="fas fa-user me-1"></i>' + task.otherPartyName + '</small><br/>' +
                                '<small class="text-muted"><i class="fas fa-tag me-1"></i>' + task.serviceName + '</small>' +
                                '</div>' +
                                payButton +
                                '</div>' +
                                '<span class="badge ' + statusClass + '"><i class="fas ' + statusIcon + ' me-1"></i>' + task.status + '</span>' +
                                '</li>';
                            $('#upcoming-list').append(item);
                        });

                        // Payment Button Handler
                        $(document).off('click', '.pay-btn').on('click', '.pay-btn', function () {
                            var btn = $(this);
                            var taskId = btn.data('taskid');
                            var price = btn.data('price');
                            var serviceName = btn.data('servicename');

                            // Disable button to prevent double clicks
                            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> جاري التحويل...');

                            $.ajax({
                                url: '/Payment/Checkout',
                                method: 'POST',
                                data: {
                                    taskId: taskId,
                                    price: price,
                                    serviceName: serviceName,
                                    customerId: userId
                                },
                                success: function (response) {
                                    if (response.url) {
                                        window.location.href = response.url;
                                    } else {
                                        toastr.error("Invalid response from server.");
                                        btn.prop('disabled', false).html('<i class="fas fa-credit-card me-1"></i> دفع أونلاين');
                                    }
                                },
                                error: function (xhr) {
                                    toastr.error("Payment initiation failed.");
                                    console.error(xhr.responseText);
                                    btn.prop('disabled', false).html('<i class="fas fa-credit-card me-1"></i> دفع أونلاين');
                                }
                            });
                        });
                    } else {
                        $('#no-upcoming').show();
                    }

                    // Populate Past
                    if (data.pastBookings && data.pastBookings.length > 0) {
                        data.pastBookings.forEach(function (task) {
                            var statusClass = task.status === 'Completed' ? 'bg-success' : 'bg-secondary';
                            var statusIcon = task.status === 'Completed' ? 'fa-check-double' : 'fa-times-circle';

                            var item = '<li class="list-group-item border rounded mb-2">' +
                                '<h6 class="mb-1 fw-bold">' + task.title + '</h6>' +
                                '<small class="text-muted"><i class="fas fa-user me-1"></i>' + task.otherPartyName + '</small><br/>' +
                                '<span class="badge ' + statusClass + ' mt-2"><i class="fas ' + statusIcon + ' me-1"></i>' + task.status + '</span>' +
                                '</li>';
                            $('#past-list').append(item);
                        });
                    } else {
                        $('#no-past').show();
                    }
                },
                error: function (xhr, status, error) {
                    $('#loading').hide();
                    toastr.error("Failed to load dashboard data.");
                    console.error(error);
                }
            });
        });
    </script>
}
