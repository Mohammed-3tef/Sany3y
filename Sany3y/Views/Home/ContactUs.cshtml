
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
    <style>
        /* ====== ضبط الاتجاه والخطوط ====== */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Cairo', sans-serif;
            direction: rtl;
            text-align: right;
        }

        
       
                

        /* ====== Buttons (Login / Signup) ====== */
        .btns {
            margin-left: 220px;
        }

        .btn-custom {
            color: white;
            border: 1px solid #fff;
            border-radius: 3px;
            padding: 3px 13px;
            font-weight: 400;
            margin-right: 6px;
            transition: 0.3s;
            background-color: transparent;
        }

            .btn-custom:hover {
                background-color: #ffc745;
                color: #fff;
                transform: translateY(-2px);
            }

        /* ====== Body & Contact Section ====== */
        body {
            background-color: #e5e9ee;
        background-image: url("https://img.freepik.com/premium-vector/doodle-mechanic-seamless-pattern-background-vector-illustration_7087-2491.jpg");
            background-position: center;
        }

        .contact-box {
            width: 70%;
            margin: 50px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            padding: 30px;
        }

            .contact-box h2 {
                color: #004d00;
                margin-bottom: 10px;
            }

            .contact-box p {
                color: #555;
            }

        .btn-send {
            background-color: #015301;
            border: none;
        }

            .btn-send:hover {
                background-color: #003500;
            }

        .info-title {
            color: #004d00;
            margin-top: 20px;
        }

        .social-icons a {
            font-size: 20px;
            color: #004d00;
            margin-left: 10px;
            transition: 0.3s;
        }

            .social-icons a:hover {
                color: #d71920;
            }

        

         

        /* ====== Responsive ====== */
        @@media (max-width: 900px) {
            .footer-container {
                flex-direction: column;
                align-items: flex-start;
            }

            .navbar-nav {
                margin-right: 0;
            }

            .btns {
                margin-left: 0;
            }

            .contact-box {
                width: 95%;
            }
        }
    </style>

   



    <!-- قسم التواصل معنا -->
    <div class="container my-5">
        <div class="row contact-box">
            <!-- القسم الأيسر (الفورم) -->
            <div class="col-md-6 mb-4 mb-md-0">
                <h2>تواصل معنا</h2>
                <p>يسعدنا تلقي استفساراتك واقتراحاتك في أي وقت.</p>

                <form id="contact-form" method="post" asp-action="SendMessage" asp-controller="Contact">
                    <div class="mb-3">
                        <label class="form-label">الاسم الكامل <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="user_name" placeholder="الاسم الأول واسم العائلة" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">رقم الهاتف <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="user_mobile" placeholder="رقم الهاتف" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">البريد الإلكتروني <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" name="user_email" placeholder="example@domain.com" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">الرسالة <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="message" rows="4" placeholder="اكتب رسالتك هنا" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-send text-white px-4">إرسال</button>
                </form>

                <p id="result" class="mt-3"></p>
            </div>

            <!-- القسم الأيمن (معلومات التواصل) -->
            <div class="col-md-6 pe-md-5 border-end">
                <h4 class="info-title">اتصل بنا</h4>
                <p>
                    <strong>11100</strong> تكلفة المكالمة العادية<br>
                    من خارج مصر:<br>
                    +2 02 200 00 000
                </p>

                <h4 class="info-title">العنوان</h4>
                <p>124 شارع عثمان بن عفان خلف الكلية الحربية - مصر الجديدة</p>

                <h4 class="info-title">البريد الإلكتروني</h4>
                <p><a href="mailto:sany3y.system@gmail.com" class="text-decoration-none">sany3y.system@gmail.com</a></p>

                <div class="social-icons mt-3">
                    <a href="#"><i class="bi bi-facebook"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                    <a href="#"><i class="bi bi-twitter-x"></i></a>
                </div>
            </div>
        </div>
    </div>


  



   

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@emailjs/browser@3/dist/email.min.js"></script>

    <script>
        (function () {
            emailjs.init("zTpbCZJ_l6s8POpKC");
        })();

        document.getElementById("contact-form").addEventListener("submit", function (event) {
            event.preventDefault();

            const serviceID = "service_d2c1803";
            const templateID = "template_wb0w6hs";

            emailjs.sendForm(serviceID, templateID, this)
                .then(() => {
                    document.getElementById("result").innerHTML = "<span class='text-success fw-bold'>✅ تم إرسال الرسالة بنجاح!</span>";
                    this.reset();
                })
                .catch((err) => {
                    document.getElementById("result").innerHTML = "<span class='text-danger fw-bold'>❌ فشل الإرسال: " + JSON.stringify(err) + "</span>";
                });
        });
    </script>
