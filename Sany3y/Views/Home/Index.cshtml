@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<style>
    :root {
        --primary-green: #004d00;
        --accent-yellow: #ffb300;
        --light-yellow: #ffc947;
        --light-bg: #f8f9fa;
        --text-dark: #2c3e50;
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Cairo', sans-serif;
    }

    .navbar-collapse.collapse {
        color: var(--text-dark);
        transition: background-color 0.3s ease;
    }

    .navbar-collapse.collapse.show {
        padding: 1rem 0;
        border-radius: 20px;
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px); /* تأثير البلور */
        -webkit-backdrop-filter: blur(10px); /* دعم Safari */
    }
    
    .navbar-collapse.collapse.show .navbar-nav {
        padding: 0rem 1.5rem;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3)), url("/img/hero-bg.png");
        background-size: cover;
        background-position: center;
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        /* clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%); */ /* Removed for a cleaner look */
    }

    .hero-content {
        z-index: 2;
        max-width: 900px;
        padding: 20px;
        text-align: center;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 900;
        margin-bottom: 1.5rem;
        text-shadow: 0 4px 10px rgba(0,0,0,0.5);
        letter-spacing: -1px;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 3rem;
        opacity: 0.95;
        font-weight: 500;
        text-shadow: 0 2px 5px rgba(0,0,0,0.5);
    }

    /* Glassmorphism Search Box */
    .search-box {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        padding: 10px;
        border-radius: 50px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        display: flex;
        gap: 10px;
        max-width: 700px;
        margin: 0 auto;
    }

    .search-input {
        border: none;
        background: transparent;
        padding: 15px 25px;
        font-size: 1.1rem;
        width: 100%;
        color: white;
    }
    
    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.8);
    }

    .search-input:focus {
        outline: none;
        box-shadow: none;
    }

    .search-btn {
        border-radius: 50px;
        padding: 12px 40px;
        font-weight: bold;
        font-size: 1.1rem;
        transition: all 0.3s;
        background: var(--accent-yellow);
        color: var(--text-dark);
        border: none;
        white-space: nowrap;
    }

    .search-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 179, 0, 0.4);
        background: #ffc107;
    }

    /* Section Headers */
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-title {
        color: var(--primary-green);
        font-weight: 800;
        position: relative;
        display: inline-block;
        padding-bottom: 10px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 50px;
        height: 3px;
        background-color: var(--accent-yellow);
        border-radius: 2px;
    }

    /* Categories / Filter */
    .filter-btn {
        border-radius: 25px;
        padding: 8px 20px;
        margin: 0 5px;
        border: 2px solid var(--primary-green);
        color: var(--primary-green);
        font-weight: 600;
        transition: all 0.3s;
        background: white;
    }

    .filter-btn:hover, .filter-btn.active {
        background: var(--primary-green);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,77,0,0.2);
    }

    /* Technician Cards */
    .tech-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s;
        background: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .tech-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .tech-img-wrapper {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .tech-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .tech-card:hover .tech-img {
        transform: scale(1.1);
    }

    .tech-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
        padding: 20px;
        color: white;
    }

    /* Steps Section */
    .step-card {
        background: white;
        padding: 30px;
        border-radius: 20px;
        text-align: center;
        transition: all 0.3s;
        height: 100%;
        position: relative;
        z-index: 1;
        overflow: hidden;
    }

    .step-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 0;
        background: var(--primary-green);
        z-index: -1;
        transition: all 0.4s ease;
        border-radius: 20px;
    }

    .step-card:hover::before {
        height: 100%;
    }

    .step-card:hover h5, .step-card:hover p {
        color: white !important;
    }

    .step-icon-box {
        width: 80px;
        height: 80px;
        background: var(--light-bg);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        transition: all 0.3s;
    }

    .step-card:hover .step-icon-box {
        background: white;
        transform: rotateY(180deg);
    }

    /* Testimonials */
    .testimonial-card {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        position: relative;
        margin: 20px;
    }

    .quote-icon {
        color: var(--accent-yellow);
        font-size: 2rem;
        opacity: 0.3;
        position: absolute;
        top: 20px;
        right: 20px;
    }
</style>

<!-- Hero Section -->
<section class="hero-section text-white text-center animate__animated animate__fadeIn">
    <div class="hero-content">
        <h1 class="hero-title animate__animated animate__fadeInDown">دور على صنايعي في ثواني</h1>
        <p class="hero-subtitle animate__animated animate__fadeInUp">كل الخدمات في مكان واحد — سباكة، نجارة، كهرباء وغيرهم</p>
        
        <form class="search-form mt-5 animate__animated animate__fadeInUp animate__delay-1s" method="get" action="@Url.Action("Search", "Services")">
            <div class="search-box">
                <i class="fas fa-search text-white align-self-center ms-3 opacity-75"></i>
                <input type="text" name="serviceType" class="search-input" placeholder="ابحث عن خدمة (مثال: سباكة، كهرباء...)">
                <button type="submit" class="search-btn">ابحث الآن</button>
            </div>
        </form>
    </div>
</section>

<!-- Categories & Technicians -->
<section class="py-5">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">تصفح حسب التخصص</h2>
        </div>

        <!-- Filters -->
        @model Sany3y.Infrastructure.ViewModels.HomeIndexViewModel

        <div class="d-flex justify-content-center flex-wrap mb-5 gap-2">
            <button class="filter-btn active" id="all-technicians" data-id="0">الكل</button>
            @foreach (var category in Model.Categories)
            {
                <button class="filter-btn" data-id="@category.Id">@category.Name</button>
            }
        </div>

        <div class="row g-4" id="technicians-grid">
            <!-- هنا هيتم وضع الـ Technicians عن طريق AJAX -->
        </div>


        <!-- Technicians Grid -->
       
        
        <div class="text-center mt-5">
            <a href="@Url.Action("Index", "Services")" class="btn btn-primary rounded-pill px-5 py-2"> عرض جميع الفنيين  </a>
        </div>

    </div>
</section>

<!-- How it Works -->
