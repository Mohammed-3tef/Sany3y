@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.filter-btn').click(function() {
                $('.filter-btn').removeClass('active');
                $(this).addClass('active');

                var categoryId = $(this).data('id');

                $.ajax({
                    url: '/api/Technician/GetByCategory/' + categoryId,
                    method: 'GET',
                    success: function(technicians) {
                        var grid = $('#technicians-grid');
                        grid.empty(); // نمسح القديم
                        technicians.forEach(function(t) {
                            var card = `
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="tech-card h-100">
                                    <div class="tech-img-wrapper">
                                        <img src="${t.profilePicture || 'https://placehold.co/300x200?text=Technician'}" class="tech-img" />
                                        <div class="tech-overlay">
                                            <span class="badge bg-warning text-dark">${t.categoryName}</span>
                                        </div>
                                    </div>
                                    <div class="card-body p-3 text-center">
                                        <h5 class="fw-bold mb-1">${t.firstName} ${t.lastName}</h5>
                                        <p class="text-muted small mb-2">${t.city}</p>
                                        <div class="d-flex justify-content-center gap-1 mb-3">
                                            ${getStars(t.rating)}
                                        </div>
                                        <a href="/User/Details/${t.id}" class="btn btn-outline-success btn-sm w-100 rounded-pill">عرض الملف الشخصي</a>
                                    </div>
                                </div>
                            </div>`;
                            grid.append(card);
                        });
                    }
                });
            });

            function getStars(rating) {
                var stars = '';
                for(var i=0;i<5;i++){
                    if(i<Math.floor(rating)) stars += '<i class="fas fa-star text-warning"></i>';
                    else if(i<rating) stars += '<i class="fas fa-star-half-alt text-warning"></i>';
                    else stars += '<i class="far fa-star text-warning"></i>';
                }
                return stars;
            }
        });
    </script>
}
<script>
    // عناصر DOM
    const filterButtons = document.querySelectorAll('.filter-btn');
    const techGrid = document.getElementById('technicians-grid');

    // عند الضغط على أي زر فلتر
    filterButtons.forEach(btn => {
        btn.addEventListener('click', async () => {
            // إزالة active من كل الأزرار وإضافة للزر اللي اتضغط
            filterButtons.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            const categoryId = btn.getAttribute('data-filter');

            // جلب البيانات من API
            const response = await fetch(`/api/Technician/GetByCategory/${categoryId}`);
            const technicians = await response.json();

            // مسح الكروت القديمة
            techGrid.innerHTML = '';

            // إعادة إنشاء الكروت حسب الـ JSON اللي جاي من API
            technicians.forEach(t => {
                const card = document.createElement('div');
                card.classList.add('col-lg-3','col-md-4','col-sm-6');
                card.innerHTML = `
                    <div class="tech-card h-100">
                        <div class="tech-img-wrapper">
                            <img src="${t.profileImage || 'https://placehold.co/300x200?text=Technician'}" class="tech-img" alt="فني"/>
                            <div class="tech-overlay">
                                <span class="badge bg-warning text-dark mb-2">${t.categoryName || ''}</span>
                            </div>
                        </div>
                        <div class="card-body p-3 text-center">
                            <h5 class="fw-bold mb-1">${t.firstName} ${t.lastName}</h5>
                            <p class="text-muted small mb-2"><i class="fas fa-map-marker-alt text-primary me-1"></i>${t.city || ''}</p>
                            <div class="d-flex justify-content-center gap-1 mb-3">
                                ${generateStars(t.rating)}
                            </div>
                            <a href="#" class="btn btn-outline-success btn-sm w-100 rounded-pill">عرض الملف الشخصي</a>
                        </div>
                    </div>
                `;
                techGrid.appendChild(card);
            });
        });
    });

    // دالة مساعدة لتوليد النجوم
    function generateStars(rating) {
        let starsHtml = '';
        for (let i = 1; i <= 5; i++) {
            if(i <= Math.floor(rating)) starsHtml += '<i class="fas fa-star text-warning"></i>';
            else if(i - rating < 1) starsHtml += '<i class="fas fa-star-half-alt text-warning"></i>';
            else starsHtml += '<i class="far fa-star text-warning"></i>';
        }
        return starsHtml;
    }

    // تفعيل الفلتر الافتراضي عند تحميل الصفحة
    document.querySelector('.filter-btn.active').click();
</script>
