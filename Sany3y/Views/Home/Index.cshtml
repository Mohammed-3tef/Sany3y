<!-- Testimonials -->
<section class="py-5">
    <div class="container">
        <div class="section-header text-center mb-4">
            <h2 class="section-title">آراء عملائنا</h2>
        </div>

        <div class="swiper mySwiper pb-5">
            <div class="swiper-wrapper">
                @for (int i = 0; i < 5; i++)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-card text-center p-4 border rounded shadow-sm">
                            <i class="fas fa-quote-right quote-icon mb-2"></i>
                            <img src="https://randomuser.me/api/portraits/men/@(i + 10).jpg" class="rounded-circle mb-3" width="80" height="80" alt="Client">
                            <h5 class="fw-bold mb-1">محمد علي</h5>
                            <p class="text-muted small mb-3">عميل مميز</p>
                            <p class="fst-italic text-muted">"تجربة ممتازة جداً، الفني وصل في الموعد وأنجز العمل باحترافية عالية. أنصح الجميع باستخدام الموقع."</p>
                            <div class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>
               
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var swiper = new Swiper(".mySwiper", {
                slidesPerView: 1,
                spaceBetween: 30,
                loop: true,
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
                breakpoints: {
                    576: { slidesPerView: 1 },
                    768: { slidesPerView: 2 },
                    992: { slidesPerView: 3 },
                    1200: { slidesPerView: 4 },
                }
            });

            $(".filter-btn").click(function () {

                $(".filter-btn").removeClass("active");
                $(this).addClass("active");

                let categoryId = $(this).data("id");

                $.ajax({
                    url: "/api/Technician/GetByCategory/" + categoryId,
                    method: "GET",
                    success: async function (technicians) {
                        let grid = $("#technicians-grid");
                        grid.empty();

                        // جلب الصور لكل فني
                        for (const t of technicians.slice(0, 8)) {
                            let profileUrl = 'https://placehold.co/300x200?text=Technician';

                            if (t.profilePictureId) {
                                try {
                                    let picResponse = await fetch("/api/ProfilePicture/GetById/" + t.profilePictureId);
                                    if (picResponse.ok) {
                                        let picData = await picResponse.json();
                                        if (picData.path) profileUrl = picData.path;
                                    }
                                } catch (err) {
                                    console.error("Error fetching profile picture:", err);
                                }
                            }

                            let card = `
                                <div class="col-lg-3 col-md-4 col-sm-6">
                                    <div class="tech-card h-100">
                                        <div class="tech-img-wrapper">
                                            <img src="${profileUrl}" class="tech-img" />
                                            <div class="tech-overlay">
                                                <span class="badge bg-warning text-dark mb-2">${t.categoryName || ''}</span>
                                            </div>
                                        </div>
                                        <div class="card-body p-3 text-center">
                                            <h5 class="fw-bold mb-1">${t.firstName} ${t.lastName}</h5>
                                            <p class="text-muted small mb-2">${t.city || ''}</p>
                                            <a href="/Services/Details/${t.id}" class="btn btn-outline-success btn-sm w-100 rounded-pill">
                                                عرض الملف الشخصي
                                            </a>
                                        </div>
                                    </div>
                                </div>`;

                            grid.append(card);
                        }
                    }
                });
            });

            // تحميل الكل أول ما الصفحة تفتح
            $(".filter-btn[data-id='0']").click();
        });
    </script>
}
