@{
    ViewData["Title"] = "تأكيد البريد الإلكتروني";
}

<div class="text-center py-5">
    @if (ViewBag.State == "Success")
    {
        <div class="alert alert-success shadow-sm p-4 rounded-3">
            <h4 class="fw-semibold mb-2">✅ تم تأكيد البريد بنجاح</h4>
            <p class="mb-3">@ViewBag.Message</p>
        </div>
    }
    else
    {
        <div class="alert alert-danger shadow-sm p-4 rounded-3">
            <h4 class="fw-semibold mb-2">❌ فشل تأكيد البريد الإلكتروني</h4>
            <p>@ViewBag.Message</p>
            <a asp-controller="Account" asp-action="ResendConfirmation" class="btn btn-outline-danger mt-3">
                إعادة إرسال بريد التفعيل
            </a>
        </div>
    }
</div>