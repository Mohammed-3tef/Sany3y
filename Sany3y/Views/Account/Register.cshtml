@model Sany3y.Infrastructure.ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "إنشاء حساب";
}

<style>
    .hover-underline {
        text-decoration: none;
    }

    .hover-underline:hover {
        text-decoration: underline;
    }
</style>

<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="col-md-8 col-lg-6">
        <div class="text-center mb-4">
            <h1>@ViewData["Title"]</h1>
        </div>

        <form asp-action="Register">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-12">
                    <label asp-for="NationalId" class="form-label">الرقم القومي</label>
                    <input asp-for="NationalId" min="0" class="form-control" />
                    <span asp-validation-for="NationalId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label">الاسم الأول</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label">الاسم الأخير</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="UserName" class="form-label">اسم المستخدم</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="BirthDate" class="form-label">تاريخ الميلاد</label>
                    <input asp-for="BirthDate" type="date" class="form-control text-end" />
                    <span asp-validation-for="BirthDate" class="text-danger small"></span>
                </div>

                <div class="d-md-flex col-md-12 align-items-center">
                    <label class="form-label d-block col-md-2">النوع</label>

                    <div class="d-flex gap-4 flex-wrap col-md-10">
                        <div class="form-check col-md-5 p-0 d-flex flex-row">
                            <input asp-for="IsMale" class="form-check-input ms-2" type="radio" value="true" id="genderMale" />
                            <label class="form-check-label" for="genderMale">ذكر</label>
                        </div>

                        <div class="form-check col-md-5 p-0 d-flex flex-row">
                            <input asp-for="IsMale" class="form-check-input ms-2" type="radio" value="false" id="genderFemale" />
                            <label class="form-check-label" for="genderFemale">أنثى</label>
                        </div>
                    </div>

                    <span asp-validation-for="IsMale" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label">رقم الهاتف</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="City" class="form-label">المدينة</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Street" class="form-label">العنوان</label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">كلمة المرور</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-md-flex col-md-12 align-items-center">
                    <label class="form-label d-block col-md-2">أنا</label>

                    <div class="d-flex gap-4 flex-wrap col-md-10">
                        <div class="form-check col-md-5 p-0 p-0 d-flex flex-row">
                            <input asp-for="IsClient" class="form-check-input ms-2" type="radio" value="true" id="client" />
                            <label class="form-check-label" for="client">عميل</label>
                        </div>

                        <div class="form-check col-md-5 p-0 d-flex flex-row">
                            <input asp-for="IsClient" class="form-check-input ms-2" type="radio" value="false" id="tasker" />
                            <label class="form-check-label" for="tasker">مزود خدمة</label>
                        </div>
                    </div>

                    <span asp-validation-for="IsClient" class="text-danger small"></span>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" data-show-loader="true" value="إنشاء الحساب" class="btn btn-primary w-100" />
            </div>
        </form>

        <div class="">
            <p class="mt-3">
                لديك حساب بالفعل؟
                <a asp-controller="Account" asp-action="Login" class="text-primary fw-semibold hover-underline">
                    سجل الدخول من هنا
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
