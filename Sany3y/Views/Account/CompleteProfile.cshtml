@model Sany3y.Infrastructure.ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "إكمال البيانات";
}

<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="col-md-8 col-lg-6">
        <div class="text-center mb-4">
            <h1>@ViewData["Title"]</h1>
        </div>

        <form asp-action="CompleteProfilePost" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-12">
                    <label asp-for="NationalId" class="form-label">الرقم القومي</label>
                    <input asp-for="NationalId" min="0" class="form-control" />
                    <span asp-validation-for="NationalId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label">الاسم الأول</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label">الاسم الأخير</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="UserName" class="form-label">اسم المستخدم</label>
                    <input asp-for="UserName" class="form-control" readonly />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="BirthDate" class="form-label">تاريخ الميلاد</label>
                    <input asp-for="BirthDate" type="date" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger small"></span>
                </div>

                <div class="d-md-flex col-md-12 align-items-center">
                    <label class="form-label d-block col-md-2">النوع</label>

                    <div class="d-flex gap-4 col-md-5 p-0 d-flex flex-row">
                        <div class="form-check col-md-4">
                            <input asp-for="IsMale" class="form-check-input ms-2" type="radio" value="true" id="genderMale" />
                            <label class="form-check-label" for="genderMale">ذكر</label>
                        </div>

                        <div class="form-check col-md-4">
                            <input asp-for="IsMale" class="form-check-input ms-2" type="radio" value="false" id="genderFemale" />
                            <label class="form-check-label" for="genderFemale">أنثى</label>
                        </div>
                    </div>

                    <span asp-validation-for="IsMale" class="text-danger small"></span>
                </div>


                <div class="col-md-12">
                    <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label">رقم الهاتف</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="Governorate" class="form-select" id="Governorate">
                            <option value="">اختر المحافظة</option>
                            @foreach (var governorate in ViewBag.AllGovernorates)
                            {
                                <option value="@governorate.Id">@governorate.ArabicName</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="City" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="City" class="form-select" id="City">
                            <option value="">اختر المدينة</option>
                            @* Cities will be populated via JavaScript based on selected governorate *@
                        </select>
                    </div>
                    <span asp-validation-for="City" class="text-danger small"></span>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Street" class="form-control" placeholder="العنوان بالتفصيل" />
                        <label asp-for="Street">الشارع / المنطقة</label>
                    </div>
                    <span asp-validation-for="Street" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">كلمة السر</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة السر</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label class="form-label">صورة البطاقة</label>
                    <input type="file" name="NationalIdImage" class="form-control" accept="image/*" />
                    <span class="text-danger small"></span>
                </div>

                <div class="d-md-flex col-md-12 align-items-center">
                    <label class="form-label d-block col-md-2">أنا</label>

                    <div class="d-flex gap-4 flex-wrap col-md-10">
                        <div class="form-check col-md-5 p-0 d-flex flex-row">
                            <input asp-for="IsClient" class="form-check-input ms-2" type="radio" value="true" id="client" />
                            <label class="form-check-label" for="client">عميل</label>
                        </div>

                        <div class="form-check col-md-5 p-0 d-flex flex-row">
                            <input asp-for="IsClient" class="form-check-input ms-2" type="radio" value="false" id="tasker" />
                            <label class="form-check-label" for="tasker">فني / صنايعي</label>
                        </div>
                    </div>

                    <span asp-validation-for="IsClient" class="text-danger small"></span>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" data-show-loader="true" value="إنشاء الحساب" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('#Governorate').change(function () {
                var governorateId = $(this).val();

                if (!governorateId) {
                    $('#City').empty().append('<option value="">اختر المدينة</option>');
                    return;
                }

                $.ajax({
                    url: `https://localhost:7178/api/CountryServices/GetCitiesByGovernorateId/${governorateId}`,
                    type: 'GET',
                    success: function (cities) {
                        var citySelect = $('#City');
                        citySelect.empty();
                        citySelect.append('<option value="">اختر المدينة</option>');

                        if (cities && cities.length > 0) {
                            $.each(cities, function (index, city) {
                                citySelect.append('<option value="' + city.id + '">' + city.arabicName + '</option>');
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX Error:', status, error); // فقط log في console
                        // alert('حدث خطأ أثناء جلب المدن.');  <-- ممكن تشيله
                    }
                });
            });
        });
    </script>
}