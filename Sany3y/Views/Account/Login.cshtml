@model Sany3y.Infrastructure.ViewModels.LoginUserViewModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 2px;
        background: #eee;
    }

    .hover-underline {
        text-decoration: none;
    }

    .hover-underline:hover {
        text-decoration: underline;
    }
</style>

<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="col-md-6 col-lg-4">
        <div class="text-center mb-4">
            <h1>@ViewData["Title"]</h1>
        </div>

        <form asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="control-label mb-1">اسم المستخدم</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label mb-1">كلمة المرور</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="row align-items-center mb-3 text-sm-start">
                <div class="col-12 col-sm-6 mb-2 mb-sm-0">
                    <div class="form-check d-flex justify-content-sm-start">
						<input class="form-check-input ms-2" asp-for="RememberMe" id="rememberMe" />
						<label class="form-check-label" for="rememberMe">
                            تذكرني
                        </label>
                    </div>
                </div>

                <div class="col-12 col-sm-6">
                    <div class="d-flex justify-content-start justify-content-sm-end">
                        <a asp-controller="Account" asp-action="ChangePassword" class="text-primary fw-semibold hover-underline">
                            نسيت كلمة المرور؟
                        </a>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <input type="submit" data-show-loader="true" value="تسجيل الدخول" class="btn btn-primary w-100" />
            </div>
        </form>

        <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">أو</p>
        </div>

        <form asp-controller="Account" asp-action="ExternalLogin" method="post" class="mb-3">
            <button type="submit" name="provider" value="Google" class="btn btn-danger w-100">
                <i class="fab fa-google"></i> <span class="mx-1">الدخول باستخدام جوجل</span>
            </button>
        </form>

        <div class="">
            <p class="mb-0">
                ليس لديك حساب؟
                <a asp-controller="Account" asp-action="Register" class="text-primary fw-semibold hover-underline">
                    أنشئ حسابك الآن
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}