<partial name="_Notification" />

<div class="container py-5 text-center">
    <div class="alert alert-info shadow-sm p-4 rounded-3">
        <h4 class="fw-semibold mb-3">Email Confirmation Notice</h4>
        <p class="lead mb-4">@ViewBag.Message</p>
        <p>Please check your inbox and follow the confirmation link we sent you.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">Return to Login</a>
    </div>
</div>
