@using Sany3y.Infrastructure.Models
@using Sany3y.Infrastructure.ViewModels
@model Sany3y.Infrastructure.DTOs.UserDTO

@{
    ViewData["Title"] = "تعديل الملف الشخصي";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<style>
    .profile-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        background: white;
        overflow: hidden;
    }
    
    .profile-header {
        background: linear-gradient(135deg, #004d00 0%, #006400 100%);
        padding: 20px;
        color: white;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .form-control:focus {
        border-color: #004d00;
        box-shadow: 0 0 0 0.25rem rgba(0, 77, 0, 0.15);
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-color: #ced4da;
        color: #004d00;
    }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="profile-card">
                <div class="profile-header d-flex align-items-center">
                    <i class="fas fa-user-edit fa-2x me-3 ms-3"></i>
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="EditProfile" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger mb-4" role="alert" style="display:none;"></div>

                        <div class="row g-4">
                            <!-- Profile Picture -->
                            <div class="col-12 text-center">
                                <label class="form-label d-block mb-2">صورة الملف الشخصي</label>
                                <div class="mb-3">
                                    <img id="profilePreview" src="@Model.ProfilePicture" alt="صورة الملف الشخصي" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #004d00;" />
                                </div>
                                <input name="UploadedImage" id="profileImageInput" type="file" class="form-control form-control-sm w-auto mx-auto" />
                                <span asp-validation-for="ProfilePicture" class="text-danger small"></span>
                            </div>

                            <!-- Personal Info Section -->
                            <div class="col-12">
                                <h5 class="text-muted border-bottom pb-2 mt-3"><i class="fas fa-id-card me-2"></i> المعلومات الشخصية</h5>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">الاسم الأول</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="FirstName" class="form-control" placeholder="الاسم الأول" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">اسم العائلة</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="LastName" class="form-control" placeholder="اسم العائلة" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label">اسم المستخدم</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-at"></i></span>
                                    <input asp-for="UserName" class="form-control bg-light" readonly />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="BirthDate" class="form-label">تاريخ الميلاد</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                    <input asp-for="BirthDate" type="date" class="form-control text-end" />
                                </div>
                                <span asp-validation-for="BirthDate" class="text-danger small"></span>
                            </div>

                            <!-- Contact Info Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-muted border-bottom pb-2 mt-3"><i class="fas fa-address-book me-2"></i> معلومات الاتصال</h5>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Email" class="form-control bg-light" readonly />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">رقم الهاتف</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="01xxxxxxxxx" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <!-- Address Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-muted border-bottom pb-2 mt-3"><i class="fas fa-map-marker-alt me-2"></i> العنوان</h5>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Governorate" class="form-label">المحافظة</label>
                                <select asp-for="Governorate" id="Governorate" class="form-select">
                                    <option value="">اختر المحافظة</option>
                                    @{
                                        if (ViewBag.AllGovernorates != null)
                                        {
                                            foreach (var governorate in ViewBag.AllGovernorates)
                                            {
                                                if (Model.Governorate == governorate.ArabicName)
                                                {
                                                    <option value="@governorate.Id" selected>@governorate.ArabicName</option>
                                                }
                                                else
                                                {
                                                    <option value="@governorate.Id">@governorate.ArabicName</option>                                                    
                                                }
                                            }
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Governorate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label">المدينة / المنطقة</label>
                                <select asp-for="City" id="City" class="form-select">
                                    <option value="">اختر المدينة / المنطقة</option>
                                    <!-- Form Ajax -->
                                </select>
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Street" class="form-label">الشارع</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-road"></i></span>
                                    <input asp-for="Street" class="form-control" placeholder="اسم الشارع" />
                                </div>
                                <span asp-validation-for="Street" class="text-danger small"></span>
                            </div>

                            @{
                                if (ViewBag.IsTechnician == true)
                                {
                                    <!-- Category Section -->
                                    <div class="col-12 mt-4">
                                        <h5 class="text-muted border-bottom pb-2 mt-3"><i class="fas fa-layer-group me-2"></i> التخصص</h5>
                                    </div>

                                    <div class="col-md-12">
                                        <label asp-for="CategoryId" class="form-label">التخصص</label>
                                        <select asp-for="CategoryId" class="form-select">
                                            <option value="">اختر التخصص</option>
                                            @{
                                                if (ViewBag.AllCategories != null)
                                                {
                                                    foreach (var category in ViewBag.AllCategories)
                                                    {
                                                        <option value="@category.Id">@category.Name</option>
                                                    }
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="ExperienceYears" class="form-label">عدد سنين الخبرة</label>
                                        <input asp-for="ExperienceYears" type="number" class="form-control" placeholder="عدد سنين الخبرة" />
                                        <span asp-validation-for="ExperienceYears" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Price" class="form-label">سعر الخدمة</label>
                                        <input asp-for="Price" type="number" class="form-control" placeholder="سعر الخدمة" />
                                        <span asp-validation-for="Price" class="text-danger small"></span>
                                    </div>

                                    <!-- Bio Section -->
                                    <div class="col-12 mt-4">
                                        <label asp-for="Bio" class="form-label"><i class="fas fa-info-circle me-2"></i> نبذة شخصية</label>
                                        <textarea asp-for="Bio" class="form-control" rows="4" placeholder="اكتب نبذة مختصرة عنك..."></textarea>
                                        <span asp-validation-for="Bio" class="text-danger small"></span>
                                    </div>
                                }
                            }
                        </div>

                        <!-- Actions -->
                        <div class="row mt-5 pt-3 border-top">
                            <div class="col-md-6 mb-2 mb-md-0 order-md-2">
                                <button type="submit" data-show-loader="true" class="btn btn-success w-100 py-2 fw-bold">
                                    <i class="fas fa-save me-2"></i> حفظ التعديلات
                                </button>
                            </div>
                            <div class="col-md-6 order-md-1">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 py-2" data-show-loader="true">
                                    <i class="fas fa-times me-2"></i> إلغاء
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Show validation summary if it has errors
        $(document).ready(function() {
            if ($('.validation-summary-errors ul li').length > 0) {
                $('.validation-summary-errors').closest('.alert').show();
            }

            $('#Governorate').change();

            // Preview selected profile image
            $('#profileImageInput').on('change', function(event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#profilePreview').attr('src', e.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });
        });

        $('#Governorate').change(function () {
            var governorateId = $(this).val();
            var selectedCity = '@Html.Raw(@Model.City)'.trim();

            if (!governorateId) {
                $('#City').empty().append('<option value="">اختر المدينة</option>');
                return;
            }

            $.ajax({
                url: `https://localhost:7178/api/CountryServices/GetCitiesByGovernorateId/${governorateId}`,
                type: 'GET',
                success: function (cities) {
                    var citySelect = $('#City');
                    citySelect.empty();
                    citySelect.append('<option value="">اختر المدينة / المنطقة</option>');

                    if (cities && cities.length > 0) {
                        $.each(cities, function (index, city) {
                            var selected = city.arabicName.trim() === selectedCity ? 'selected' : '';
                            citySelect.append('<option value="' + city.id + '" ' + selected + '>' + city.arabicName + '</option>');
                        });
                    }
                },
                error: function (xhr, status, error) {
                    console.error('AJAX Error:', status, error); // فقط log في console
                    // alert('حدث خطأ أثناء جلب المدن.');  <-- ممكن تشيله
                }
            });
        });
    </script>
}