@using Sany3y.Infrastructure.Models;
@model IEnumerable<Sany3y.Infrastructure.Models.Category>
@{
    ViewData["Title"] = "إدارة التصنيفات";
    Layout = "_AdminLayout";
    var jwtToken = ViewBag.JwtToken as string;
}


<div class="d-flex flex-column flex-lg-row justify-content-between align-items-center mb-2">
    <h1 class="mb-3">@ViewData["Title"]</h1>

    <div>
        <button type="button" class="btn btn-outline-primary" id="openCreateCategoryModal">
            <i class="fa-solid fa-plus me-1"></i> إنشاء تصنيف جديد
        </button>
        <a asp-controller="Admin" asp-action="ExportCategoriesPDF" class="btn btn-outline-danger">
            <i class="fa-solid fa-file-pdf me-1"></i> تصدير PDF
        </a>
        <a asp-controller="Admin" asp-action="ExportCategoriesCSV" class="btn btn-outline-success">
            <i class="fa-solid fa-file-csv me-1"></i> تصدير CSV
        </a>
    </div>
</div>

<table id="category-table" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>رقم</th>
            <th>الاسم</th>
            <th>الوصف</th>
            <th>الإجراءات</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        @{
                            if (string.IsNullOrEmpty(item.Description))
                            {
                                <p class="text-muted">لا يوجد وصف</p>
                            }
                            else
                            {
                                @item.Description
                            }
                        }
                    </td>
                    <td class="d-flex">
                        <button type="button" class="btn btn-outline-warning w-100 mx-2 edit-category-btn"
                                data-id="@item.Id" data-name="@item.Name" data-description="@(item.Description ?? "")">
                            <i class="fa-solid fa-pen fa-sm"></i>
                        </button>

                        <button type="button" class="btn btn-outline-danger w-100 delete-category-btn"
                                data-id="@item.Id" data-name="@item.Name">
                            <i class="fa-solid fa-trash fa-sm"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Create Category Modal -->
<div class="modal fade" id="createCategoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form id="createCategoryForm" method="post">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">إنشاء تصنيف جديد</h5>
                    <button type="button" class="btn-close close-btn" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <div class="mb-3">
                        <label class="form-label">اسم التصنيف</label>
                        <input type="text" id="createCategoryName" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">الوصف</label>
                        <textarea id="createCategoryDescription" class="form-control" rows="3"></textarea>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-primary">إنشاء</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form id="editCategoryForm" method="post">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title">تعديل التصنيف</h5>
                    <button type="button" class="btn-close close-btn" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="editCategoryId" />

                    <div class="mb-3">
                        <label class="form-label">اسم التصنيف</label>
                        <input type="text" id="editCategoryName" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">الوصف</label>
                        <textarea id="editCategoryDescription" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-warning">حفظ التعديل</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteCategoryModal" tabindex="-1" aria-labelledby="confirmDeleteCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="deleteCategoryForm" method="post">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteCategoryModalLabel">تأكيد الحذف</h5>
                    <button type="button" class="btn-close close-btn" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <p>هل أنت متأكد أنك تريد حذف التصنيف <strong id="deleteCategoryName"></strong>؟</p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-danger">تأكيد الحذف</button>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .modal-header .btn-close {
        margin: -7px;
    }
</style>

@section Scripts {
    <script>
        let selectedCategoryId = null;
        const jwtToken = '@jwtToken';

        $(document).ready(function () {

            // Bootstrap 5 Modal instances
            const createModal = new bootstrap.Modal(document.getElementById('createCategoryModal'));
            const editModal = new bootstrap.Modal(document.getElementById('editCategoryModal'));
            const deleteModal = new bootstrap.Modal(document.getElementById('confirmDeleteCategoryModal'));

            // فتح مودال الإنشاء
            $('#openCreateCategoryModal').on('click', function () {
                createModal.show();
            });

            // إنشاء تصنيف جديد
            $('#createCategoryForm').on('submit', function (e) {
                e.preventDefault();

                const newCategory = {
                    name: $('#createCategoryName').val(),
                    description: $('#createCategoryDescription').val()
                };

                $.ajax({
                    url: `https://localhost:7178/api/Category/Create`,
                    type: 'POST',
                    contentType: "application/json",
                    headers: { 'Authorization': 'Bearer ' + jwtToken },
                    data: JSON.stringify(newCategory),
                    success: function () {
                        createModal.hide();
                        window.location.reload();
                    }
                });
            });

            // فتح مودال التعديل
            $('.edit-category-btn').on('click', function () {
                $('#editCategoryId').val($(this).data('id'));
                $('#editCategoryName').val($(this).data('name'));
                $('#editCategoryDescription').val($(this).data('description'));

                editModal.show();
            });

            // تعديل التصنيف
            $('#editCategoryForm').on('submit', function (e) {
                e.preventDefault();

                const id = $('#editCategoryId').val();
                const updatedData = {
                    id: id,
                    name: $('#editCategoryName').val(),
                    description: $('#editCategoryDescription').val()
                };

                $.ajax({
                    url: `https://localhost:7178/api/Category/Update/${id}`,
                    type: 'PUT',
                    contentType: "application/json",
                    headers: { 'Authorization': 'Bearer ' + jwtToken },
                    data: JSON.stringify(updatedData),
                    success: function () {
                        editModal.hide();
                        window.location.reload();
                    }
                });
            });

            // فتح مودال الحذف
            $('.delete-category-btn').on('click', function () {
                selectedCategoryId = $(this).data('id');
                $('#deleteCategoryName').text($(this).data('name'));
                deleteModal.show();
            });

            // تأكيد الحذف
            $('#deleteCategoryForm').on('submit', function (e) {
                e.preventDefault();

                $.ajax({
                    url: `https://localhost:7178/api/Category/Delete/${selectedCategoryId}`,
                    type: 'DELETE',
                    headers: { 'Authorization': 'Bearer ' + jwtToken },
                    success: function () {
                        deleteModal.hide();
                        window.location.reload();
                    }
                });
            });

            // DataTable
            initArabicDataTable("#category-table");
        });
    </script>
}