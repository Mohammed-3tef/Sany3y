@using Sany3y.Infrastructure.Models;
@model IEnumerable<Sany3y.Infrastructure.Models.Category>
@{
    ViewData["Title"] = "Category Management";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-2">
    <h1>@ViewData["Title"]</h1>

    <div>
        <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-outline-primary">
            <i class="fa-solid fa-plus me-1"></i> Create New Category
        </a>
        <a asp-controller="Admin" asp-action="ExportCategoriesPDF" class="btn btn-outline-danger">
            <i class="fa-solid fa-file-pdf me-1"></i> Export as PDF
        </a>
        <a asp-controller="Admin" asp-action="ExportCategoriesCSV" class="btn btn-outline-success">
            <i class="fa-solid fa-file-csv me-1"></i> Export as CSV
        </a>
    </div>
</div>

<table id="user-table" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        @{
                            if (string.IsNullOrEmpty(item.Description))
                            {
								<p class="text-muted">No description</p>
                            }
                            else
							{
								@item.Description
                            }
                        }
                    </td>
                    <td class="d-flex">
                        <a asp-controller="Admin" asp-action="ViewCategory" class="btn btn-outline-primary w-100" data-show-loader="true">
                            <i class="fa-solid fa-eye fa-sm"></i>
                        </a>
                        <a asp-controller="Admin" asp-action="EditCategory" class="btn btn-outline-warning w-100 mx-2" data-show-loader="true">
                            <i class="fa-solid fa-pen fa-sm"></i>
                        </a>
                        <a asp-controller="Admin" asp-action="DeleteCategory" class="btn btn-outline-danger w-100" data-show-loader="true">
                            <i class="fa-solid fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#user-table').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                lengthChange: true,
                responsive: true
            });
        });
    </script>
}